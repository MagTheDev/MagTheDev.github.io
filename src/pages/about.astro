---
import Layout from "../layouts/Layout.astro";
---

<Layout title="MagTheDev | About">
  <div class="back" id="back">
    <span class="text hide" id="text">BACK</span>
  </div>
  <div class="container hide" id="container">
    <!-- Professional -->
    <div></div>
    <!-- Geeky -->
    <div></div>

  </div>
</Layout>

<style>
  body {
    font-family: "Space Mono", monospace;
    font-size: 1rem;
    line-height: 1.5;
  }
  h1 {
    margin: 0;
    padding: 0;
    color: var(--color-light-blue);
  }
  h2 {
    margin: 0;
    padding: 0;
    color: var(--color-light-blue);
  }
  p {
    margin: 0;
    padding: 0;
    margin-left: 20px;
  }
  .container {
    max-width: 80%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 30px;
    transition: all 0.5s ease-in-out;
    position: relative;
  }
  .back {
    position: absolute;
    top: 45%;
    left: 10px;
    padding: 20px;
    font-size: 1.5rem;
    cursor: pointer;
    transition: color 0.2s ease-in-out;
    color: var(--color-gray);
    font-weight: bold;
  }
  .back:hover {
    color: var(--color-light-blue);
  }
  .text {
    transition: all 0.5s ease-in-out;
  }
  .hide {
    opacity: 0;
  }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("container")!.classList.remove("hide");
        document.getElementById("text")!.classList.remove("hide");
    });
    document.getElementById("back")!.addEventListener("click", function () {
        document.getElementById("container")!.classList.add("hide");
        document.getElementById("text")!.classList.add("hide");
        setTimeout(function () {
            window.location.href = "/";
        }, 500);
    });
</script>
