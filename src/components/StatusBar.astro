<div class="status-bar">
    <div class="container">
        <div class="status-container">
            <div class="header-left">
                <span class="gray">PORTFOLIO_INIT:</span> LOADED(100%)
            </div>
            <div class="header-right">
                <span class="visitors">VISITORS_ONLINE: 1</span>
            </div>
        </div>
    </div>
</div>

<style>
    .status-bar {
        background: var(--color-bg);
        padding: 10px 0;
        border-bottom: 1px solid var(--color-border);
        font-size: 0.9rem;
        font-weight: 600;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .status-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-container .gray {
        color: var(--color-muted);
    }
    .status-container .visitors {
        color: var(--color-border);
    }
</style>
    
