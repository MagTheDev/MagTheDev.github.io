---
import Layout from "../layouts/Layout.astro";
---

<Layout title="MagTheDev">
    <div class="content">
        <div class="part">
            <h1>JAKE</h1>
            <h1>PORTFOLIO/23</h1>
        </div>
        <div class="part item-container">
            <div class="item">
                <h3>ABOUT</h3>
            </div>
            <div class="item">
                <h3>PROJECT</h3>
            </div>
            <div class="item">
                <h3>CONTACT</h3>
            </div>
        </div>
    </div>
</Layout>

<style>

    * { 
        font-family: "Space Mono", monospace;
    }

    h1 {
        font-size: 100px;
        font-weight: 900;
        margin: 0;
    }
    h3 {
        font-size: 30px;
        font-weight: 900;
        margin: 0;
    }

    .part {
        width: 100%;
        height: 100%;
    }
    .content {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    .item-container {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
    }
    .item {
        width: 33%;
        border: 5px solid #1a1a1b;
        margin: 10px;
        padding: 10px;
    }
</style>