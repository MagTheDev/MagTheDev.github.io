---
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Homepage of MagTheDev" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<title>Jake | Full-Stack Developer & System Administrator</title>
		<meta
			name="description"
			content="Full-stack developer specializing in Rust, Kotlin, TypeScript. Building robust applications and scalable infrastructure."
		/>
		<meta
			name="keywords"
			content="full-stack developer, rust developer, kotlin, system administrator, portfolio"
		/>
		<meta property="og:title" content="MagTheDev - Full-Stack Developer" />
		<meta
			property="og:description"
			content="Developer specializing in Rust, Kotlin, and scalable infrastructure"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://magthe.dev" />
		<!-- <meta
			property="og:image"
			content="https://magthe.dev/preview-image.jpg"
		/> -->
	</head>
	<body>
		<slot />
	</body>
	<Footer />
</html>
<style>
	@import url("../assets/styles/globals.css");
</style>
