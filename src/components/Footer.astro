<footer role="contentinfo" aria-label="Site footer">
    <div class="footer-container">
        <aside class="quote" aria-label="Random quote">
            <blockquote id="quote" aria-live="polite"></blockquote>
        </aside>
        <p class="copyright">
            <small>© 2025 MagTheDev • Licensed under AGPL v3 (fonts excluded)</small>
        </p>
    </div>
</footer>

<style>
    .footer-container {
        margin: 1rem;
        display: flex;
        border-top: 1px solid var(--color-border);
        justify-content: space-between;
    }

    .copyright {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .quote {
        color: var(--color-muted);
    }
</style>

<script>
    const quotes = [
        `"And this world, a mirror."`,
        `"GET OUT OF MY WAY!"`,
        `"When one falls. We. Continue."`,
        `"Our whole world carries the burden of your family's grief."`,
        `"I've had enough condolences."`,
        `"Tomorrow comes."`,
        `"For those who come after, right?"`,
        `"Life keeps forcing cruel choices."`,
        `"Escape. Yeah. That's what I wanted."`,
        `"You have rocks for eyes; you certainly have rocks for brains. I am clearly a turtle."`,
        `"The shadows remember what the light forgets."`,
        `"Hope is just delayed disappointment."`,
        `"We carry our dead with us, whether we want to or not."`,
        `"Some doors are meant to stay closed."`,
        `"The expedition changes you. Always."`,
        `"Trust is a luxury we can't afford."`,
        `"Every map lies about something."`,
        `"The darkness here has teeth."`,
        `"We're not explorers anymore. We're survivors."`,
        `"Home is just a word now."`,
        `"The compass points to nowhere."`,
        `"What we found out there found us first."`,
        `"Sometimes the real treasure is the trauma we made along the way."`,
        `"The void stares back."`,
        `"We thought we were the hunters."`,
        `"Distance means nothing when the past follows you."`,
        `"The expedition never really ends."`,
    ];
    let container = document.getElementById("quote");
    if (container) {
        container.innerText = quotes[Math.floor(Math.random() * quotes.length)];
    }
</script>
